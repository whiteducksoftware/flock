{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "sync env",
			"type": "process",
			"command": "uv",
			"args": [
				"build",
				"--all"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$python",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"clear": false
			}
		},
		{
			"label": "Run Test",
			"type": "process",
			"command": "uv",
			"args": [
				"run",
				"poe",
				"run_test"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": "$python",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new",
				"clear": false
			}
		},
		{
			"label": "Docker Build",
			"type": "process",
			"command": "uv",
			"args": [
				"run",
				"poe",
				"docker_build"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": "$python",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new",
				"clear": false
			}
		},
		{
			"label": "Docker Run",
			"type": "process",
			"command": "uv",
			"args": [
				"run",
				"poe",
				"docker_run"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": "$python",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new",
				"clear": false
			}
		},
		{
			"label": "Build Docs",
			"type": "process",
			"command": "uv",
			"args": [
				"run",
				"poe",
				"mkdocs"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new",
				"clear": false
			}
		}
	]
}